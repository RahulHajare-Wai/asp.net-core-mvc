@model Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-10 mx-auto">
            <div class="border p-2 mt-4 row">
        <div class="row col-12 pb-2">
            <h3 class="text-primary" >@(Model.Id!=0?"Update":"Create") Company</h3>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" class="form-control" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12">
            @if (Model.Id != 0)
            {
                <button class="btn btn-primary" type="submit" style="width:150px">Update</button>
            }
            else
            {
            <button class="btn btn-primary" type="submit" style="width:150px">Create</button>
            }
        <a asp-controller="Company" class="btn btn-secondary" asp-action="Index" style="width:150px">
            Back To List
        </a>
        </div>
    </div>
        </div>      
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}

