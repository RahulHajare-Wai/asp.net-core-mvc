@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        
         <div class="col-6 text-end">
            <a asp-controller="CategoryController1" asp-action="Create" class="btn btn-primary">
            <i class="bg-info bi-plus-circle bg-transparent"></i>&nbsp;Create New Category
        </a>
    </div>
    </div>
   <br />



<h1>Index</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display order</th>
            <th>Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td width="50%">@data.Name</td>
                <td width="30%">@data.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CategoryController1" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@data.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="CategoryController1" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@data.Id"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

